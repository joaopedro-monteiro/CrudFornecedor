@model IEnumerable<CrudFornecedor.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover table-header">
    <thead class="table">
        <tr>
            <th style="text-align: center; font-size: 16px;">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="text-align: center; font-size: 16px;">
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th style="text-align: center; font-size: 16px;">
                @Html.DisplayNameFor(model => model.Especialidade)
            </th>
            <th style="text-align: center; font-size: 16px">
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th style="text-align: center; font-size: 16px">
                @Html.DisplayNameFor(model => model.EnderecoRua)
            </th>
            <th style="text-align: center; font-size: 16px">
                @Html.DisplayNameFor(model => model.EnderecoNumero)
            </th>
            <th style="text-align: center; font-size: 16px">
                @Html.DisplayNameFor(model => model.EnderecoBairro)
            </th>
            <th style="text-align: center; font-size: 16px">
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th style="text-align: center; font-size: 16px">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
                <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
                <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.Especialidade)
            </td>
                <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.Cep)
            </td>
                <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.EnderecoRua)
            </td>
                <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.EnderecoNumero)
            </td>
                <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.EnderecoBairro)
            </td>
                <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
                <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Cnpj').mask('00.000.000/0000-00', { reverse: true });
    </script>

}