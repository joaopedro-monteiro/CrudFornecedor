@using CrudFornecedor.Extensions
@model Fornecedor

@{
    ViewData["Title"] = "Detalhes do";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Fornecedor</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CnpjFormatado):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CnpjFormatado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Especialidade):
        </dt>
        <dd class="col-sm-10">
            @Model.Especialidade.GetDescription()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cep):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cep)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoRua):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoRua)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoNumero):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoNumero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoBairro):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EnderecoBairro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado):
        </dt>
        <dd class="col-sm-10">
            @Model.Estado.GetDescription()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>